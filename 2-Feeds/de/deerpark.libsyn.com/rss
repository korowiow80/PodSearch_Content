            <guid isPermaLink="false"><![CDATA[http://thichnhathahn.net/index.php?post_id=438005#]]></guid>
            <media:thumbnail url="http://assets.libsyn.com/item/851225" />
            <pubDate>Fri, 27 Feb 2009 20:13:00 +0000</pubDate>
