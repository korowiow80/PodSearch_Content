            <guid isPermaLink="false"><![CDATA[http://paullev.libsyn.com/index.php?post_id=238900#]]></guid>
            <media:thumbnail url="http://assets.libsyn.com/item/802098" />
            <pubDate>Wed, 25 Jul 2007 23:46:00 +0000</pubDate>
            <itunes:explicit>clean</itunes:explicit>
