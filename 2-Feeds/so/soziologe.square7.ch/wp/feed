		<slash:comments>0</slash:comments>
		<atom:link rel="payment" href="http://soziologe.square7.ch/wp/?flattrss_redirect&amp;id=653&amp;md5=92fedc19e93ff9bd884a6ec9b04b005e" type="text/html" />
		<enclosure url="http://sonntagssoziologe.podspot.de/files/stadt_gehirnstruktur.mp3" length="1880" type="audio/mpeg" />
