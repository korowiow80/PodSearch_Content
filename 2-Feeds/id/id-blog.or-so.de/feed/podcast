<enclosure url="http://id-blog.or-so.de/wp-content/uploads/2010/10/Verstehende-Naturwissenschaft-Wilhelm-Reich.mp3" length="3377147" type="audio/mpeg" />
<enclosure url="http://id-blog.or-so.de/wp-content/uploads/2010/10/Verstehende-Naturwissenschaft-Wilhelm-Reich.mp3" length="3377147" type="audio/mpeg" />
