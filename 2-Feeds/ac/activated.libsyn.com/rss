            <media:thumbnail url="http://assets.libsyn.com/item/1059775" />
            <pubDate>Thu, 06 Dec 2007 05:01:00 +0000</pubDate>
            <itunes:explicit>clean</itunes:explicit>
			<itunes:keywords>travel,harris,comedy,stories,jack,history,family,education,tales,joel,uncle,sparrow,chandler,rabbit,brer,remus</itunes:keywords>

