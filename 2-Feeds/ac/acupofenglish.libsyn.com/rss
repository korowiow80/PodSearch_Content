            <pubDate>Thu, 02 Apr 2009 04:00:00 +0000</pubDate>
            <itunes:explicit>clean</itunes:explicit>
			<itunes:keywords>and,differences,similarities</itunes:keywords>

	<itunes:subtitle><![CDATA[Different accents, same language.]]></itunes:subtitle>



