            <media:thumbnail url="http://assets.libsyn.com/item/692931" />
            <pubDate>Wed, 29 Jul 2009 04:00:00 +0000</pubDate>
            <itunes:explicit>clean</itunes:explicit>
			<itunes:keywords>the,crazy,in,car,dont,trapped,faces,argue</itunes:keywords>

