            <media:thumbnail url="http://assets.libsyn.com/item/693027" />
            <pubDate>Tue, 28 Oct 2008 04:00:00 +0000</pubDate>
            <itunes:explicit>clean</itunes:explicit>
			<itunes:keywords>the,in,man,tights</itunes:keywords>

