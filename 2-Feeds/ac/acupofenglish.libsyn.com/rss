            <media:thumbnail url="http://assets.libsyn.com/item/692990" />
            <pubDate>Wed, 11 Mar 2009 04:00:00 +0000</pubDate>
            <itunes:explicit>clean</itunes:explicit>
			<itunes:keywords>a,two,car,incident</itunes:keywords>

	<itunes:subtitle><![CDATA[A Chevy truck, ruined!]]></itunes:subtitle>



            <itunes:duration>5:19</itunes:duration>
            <enclosure length="2235472" type="audio/x-wav" url="http://traffic.libsyn.com/acupofenglish/crash.wav" />
