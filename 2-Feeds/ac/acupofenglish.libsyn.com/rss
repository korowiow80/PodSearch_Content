            <media:thumbnail url="http://assets.libsyn.com/item/697740" />
            <pubDate>Wed, 24 Feb 2010 20:01:00 +0000</pubDate>
            <itunes:explicit>clean</itunes:explicit>
			<itunes:keywords>pronunciation,th</itunes:keywords>

