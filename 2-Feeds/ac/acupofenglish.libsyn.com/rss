            <media:thumbnail url="http://assets.libsyn.com/item/692997" />
            <pubDate>Tue, 24 Feb 2009 05:00:00 +0000</pubDate>
            <itunes:explicit>clean</itunes:explicit>
			<itunes:keywords>new,gifts,world,zealand,domination</itunes:keywords>

