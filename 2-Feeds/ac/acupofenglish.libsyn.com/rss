            <media:thumbnail url="http://assets.libsyn.com/item/1741580" />
            <pubDate>Wed, 26 Oct 2011 05:14:00 +0000</pubDate>
            <itunes:explicit>clean</itunes:explicit>
            <itunes:keywords />

