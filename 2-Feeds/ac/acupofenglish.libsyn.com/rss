            <media:thumbnail url="http://assets.libsyn.com/item/1855549" />
            <pubDate>Thu, 16 Feb 2012 21:49:00 +0000</pubDate>
            <itunes:explicit>clean</itunes:explicit>
            <itunes:keywords />

