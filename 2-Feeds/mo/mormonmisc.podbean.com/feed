		<pubDate>Sun, 01 Jun 2008 16:50:27 +0000</pubDate>
		<dc:creator>mormonmisc</dc:creator>
		
	<category>Mormon Doctrine</category>
	<category>Polygamy</category>
	<category>Mormon History</category>
	<category>All Podcasts</category>
