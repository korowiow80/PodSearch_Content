            <media:thumbnail url="http://assets.libsyn.com/item/609809" />
            <pubDate>Wed, 20 May 2009 12:53:47 +0000</pubDate>
			<itunes:keywords>internet,espionage,security,corporate,ira,winkler</itunes:keywords>
